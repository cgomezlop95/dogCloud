<h1>Our dogs</h1>
<div id="dogsList">
  <ul>
    {{#each dogs}}
      <li class="singleDog">
        <a href="/dog/{{this.id}}">

          {{#if this.dogPhotoURL}}

            <div class="dogImageContainer">
              <img
                src={{this.dogPhotoURL}}
                alt={{this.dogBreed}}
              />
            </div>
          {{/if}}

          <div class="dogInfo">
            {{this.dogName}}
            -
            {{this.dogAge}}
            year(s)<br />
            {{this.dogBreed}}
            -
            {{this.dogWeight}}
            kg
          </div>

        </a>
      </li>
    {{/each}}
  </ul>
</div>