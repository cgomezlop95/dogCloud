<h1>Adoption requests (only admins)</h1>
<h2>Approved</h2>
<div>
  {{#each adoptionRequests}}
    {{#if this.requestApproved}}
      <a href="/adoption-requests/{{this.userId}}_{{this.dogId}}">
        {{this.adopterAge}}
        years -
        {{this.user.email}}
        wants to adopt
        {{this.dog.dogName}}
      </a>
      <br />
    {{/if}}
  {{/each}}
</div>