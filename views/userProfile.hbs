<h3>User Profile</h3>
<p><b>First Name:</b> {{userById.firstName}}</p>
<p><b>Last Name:</b> {{userById.lastName}}</p>
<p><b>Email:</b> {{userById.email}}</p>
<p><b>Phone Number:</b> {{userById.phoneNumber}}</p>
<p><b>User ID:</b> {{userById.id}}</p>
<p><b>Admin Rights:</b> {{userById.isAdmin}}</p>

{{#unless userById.isAdmin}}
  <div>
    <form action="/user/{{userById.id}}?_method=PUT" method="post">
      <button>Give Admin Rights</button>
    </form>
  </div>
{{/unless}}

<div>
  <a href="/user">
    <button>View All Users</button>
  </a>
</div>